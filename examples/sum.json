{
  "@type": "SimpleTransformTool",
  "inputs": {"@id": "#arr", "depth": 1, "schema": {"type": "array", "items": "int"}},
  "outputs": {"@id": "#sum", "depth": 0, "schema": {"type": "int"}},
  "script": {
    "@type": "Transform",
    "language": "javascript",
    "value": "{return {sum: $job.inputs.arr.reduce(function(a,b){return a+b;}, 0)};}"
  }
}
